

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baran.driver.Fragments.DriverDataUpdateFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="332dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="Vehicile Registration Number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_reg_no"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="13dp"
            android:ems="10"
            android:hint="180"
            android:inputType="number"
            android:maxLength="4"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/et_reg_year"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/et_reg_year"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="13dp"
            android:ems="10"
            android:hint="15"
            android:inputType="number"
            android:maxLength="2"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/et_reg_no"
            app:layout_constraintStart_toEndOf="@+id/et_reg_aplphabet"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/et_reg_aplphabet"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginStart="78dp"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="13dp"
            android:ems="10"
            android:hint="MNN"
            android:inputType="textPersonName"
            android:maxLength="3"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/et_reg_year"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"

            android:layout_marginLeft="16dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="66dp"
            android:layout_marginRight="66dp"
            android:text="Select Images"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_reg_aplphabet" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout1"
        app:layout_constraintVertical_bias="0.022">

        <ImageView
            android:id="@+id/im_driver_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:contentDescription="Driver Photo"
            app:layout_constraintBottom_toTopOf="@+id/tv_driver_pic"
            app:layout_constraintEnd_toStartOf="@+id/im_vehicle_registration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_photo_blank" />

        <ImageView
            android:id="@+id/im_driver_licence"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:contentDescription="Driving Licence"
            app:layout_constraintBottom_toTopOf="@+id/tv_driver_licence"
            app:layout_constraintEnd_toStartOf="@+id/im_driver_route"
            app:layout_constraintStart_toEndOf="@+id/tv_vehicle_front"
            app:layout_constraintTop_toBottomOf="@+id/tv_vehicle_registration"
            app:srcCompat="@drawable/ic_photo_blank" />

        <ImageView
            android:id="@+id/im_driver_route"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:contentDescription="Route"
            app:layout_constraintBottom_toTopOf="@+id/tv_driver_route"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/im_driver_licence"
            app:layout_constraintTop_toBottomOf="@+id/tv_vehicle_rare"
            app:srcCompat="@drawable/ic_photo_blank" />

        <TextView
            android:id="@+id/tv_driver_route"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:gravity="center"
            android:text="Route"
            app:layout_constraintBottom_toTopOf="@+id/im_driver_cnic_rare"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_driver_licence"
            app:layout_constraintTop_toBottomOf="@+id/im_driver_route" />

        <TextView
            android:id="@+id/tv_driver_licence"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="Licence"
            app:layout_constraintBottom_toTopOf="@+id/im_driver_cnic_front"
            app:layout_constraintEnd_toStartOf="@+id/tv_driver_route"
            app:layout_constraintStart_toEndOf="@+id/tv_vehicle_front"
            app:layout_constraintTop_toBottomOf="@+id/im_driver_licence" />

        <TextView
            android:id="@+id/tv_vehicle_front"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:gravity="center"
            android:text="Veh. Front"
            app:layout_constraintBottom_toTopOf="@+id/im_driver_cnic_front"
            app:layout_constraintEnd_toStartOf="@+id/im_driver_licence"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/im_vehicle_front" />

        <ImageView
            android:id="@+id/im_driver_cnic_front"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="71dp"
            android:layout_marginLeft="71dp"
            android:contentDescription="TODO"
            app:layout_constraintBottom_toTopOf="@+id/tv_driver_cnic_front"
            app:layout_constraintEnd_toStartOf="@+id/im_driver_cnic_rare"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_driver_licence"
            app:srcCompat="@drawable/ic_photo_blank" />

        <Button
            android:id="@+id/btn_save_driver_data"
            android:layout_width="213dp"
            android:layout_height="56dp"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginEnd="53dp"
            android:layout_marginRight="53dp"
            android:text="Update On server"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sp_driver_type" />

        <Spinner
            android:id="@+id/sp_driver_type"
            android:layout_width="314dp"
            android:layout_height="38dp"

            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_save_driver_data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_driver_cnic_front" />

        <ImageView
            android:id="@+id/im_driver_cnic_rare"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="71dp"
            android:layout_marginRight="71dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_driver_cnic_rare"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/im_driver_cnic_front"
            app:layout_constraintTop_toBottomOf="@+id/tv_driver_route"
            app:srcCompat="@drawable/ic_photo_blank" />

        <TextView
            android:id="@+id/tv_driver_cnic_front"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginStart="71dp"
            android:layout_marginLeft="71dp"
            android:gravity="center"
            android:text="NIC FRONT"
            app:layout_constraintBottom_toTopOf="@+id/sp_driver_type"
            app:layout_constraintEnd_toStartOf="@+id/tv_driver_cnic_rare"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/im_driver_cnic_front" />

        <TextView
            android:id="@+id/tv_driver_cnic_rare"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginEnd="71dp"
            android:layout_marginRight="71dp"
            android:gravity="center"
            android:text="NIC Rare"
            app:layout_constraintBottom_toTopOf="@+id/sp_driver_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_driver_cnic_front"
            app:layout_constraintTop_toBottomOf="@+id/im_driver_cnic_rare" />

        <ImageView
            android:id="@+id/im_vehicle_front"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:contentDescription="Vehicle Front"
            app:layout_constraintBottom_toTopOf="@+id/tv_vehicle_front"
            app:layout_constraintEnd_toStartOf="@+id/im_driver_licence"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_driver_pic"
            app:srcCompat="@drawable/ic_photo_blank" />

        <ImageView
            android:id="@+id/im_vehicle_registration"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="Vehicle Registration"
            app:layout_constraintBottom_toTopOf="@+id/tv_vehicle_registration"
            app:layout_constraintEnd_toStartOf="@+id/im_vehicle_rare"
            app:layout_constraintStart_toEndOf="@+id/im_driver_pic"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_photo_blank" />

        <TextView
            android:id="@+id/tv_driver_pic"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:gravity="center"
            android:text="Picture"
            app:layout_constraintBottom_toTopOf="@+id/im_vehicle_front"
            app:layout_constraintEnd_toStartOf="@+id/tv_vehicle_registration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/im_driver_pic" />

        <TextView
            android:id="@+id/tv_vehicle_registration"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="Registration"
            app:layout_constraintBottom_toTopOf="@+id/im_driver_licence"
            app:layout_constraintEnd_toStartOf="@+id/tv_vehicle_rare"
            app:layout_constraintStart_toEndOf="@+id/tv_driver_pic"
            app:layout_constraintTop_toBottomOf="@+id/im_driver_pic" />

        <TextView
            android:id="@+id/tv_vehicle_rare"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:gravity="center"
            android:text="Vehicle Rare"
            app:layout_constraintBottom_toTopOf="@+id/im_driver_route"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_vehicle_registration"
            app:layout_constraintTop_toBottomOf="@+id/im_vehicle_rare" />

        <ImageView
            android:id="@+id/im_vehicle_rare"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:contentDescription="Vehicle Rare"
            app:layout_constraintBottom_toTopOf="@+id/tv_vehicle_rare"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/im_vehicle_registration"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_photo_blank" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
