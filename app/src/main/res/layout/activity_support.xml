<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_bg_gradient"
    tools:context="live.yourdriver.driver.Activity.ChatActivity">

    <TextView
        android:id="@+id/tv_subject"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:text="SUBJECT"
        android:textColor="#FFFFFF" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conversation"
        android:layout_width="match_parent"
        android:layout_height="602dp"
        android:layout_above="@+id/userInput"
        android:layout_below="@id/tv_subject"


        android:textSize="16dp" />

    <EditText
        android:id="@+id/userInput"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/chat_bg_edit_text"
        android:hint="Type your message..."
        android:imeActionId="4"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:maxLength="150"
        android:padding="12dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_send_chat"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"

        android:layout_marginBottom="11dp"
        android:background="@android:drawable/ic_menu_send"
        android:imeOptions="actionSend"
        android:text=">" />


</RelativeLayout>
